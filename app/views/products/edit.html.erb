<h1>Edit Product</h1>
<%= form_for @product, url: {action: 'update'} do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :price %>
<%= f.number_field :price %><br>
<%= f.label :description %><br>
<%= f.text_area :description, size: "60x12" %>
<%= f.submit "Edit Product" %>
<% end  %>