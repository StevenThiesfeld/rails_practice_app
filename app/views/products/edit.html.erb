<h1>Edit Product</h1>
<% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_for @product, url: "/products/#{@product.id}", method: "put" do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :price %>
<%= f.number_field :price %><br><br>
<%= f.label :description %><br>
<%= f.text_area :description, size: "60x12" %><br>
<%= f.submit "Edit Product" %>
<% end  %>